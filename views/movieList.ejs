<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3c.org/TR/1999/REC-html401-19991224/loose.dtd">
<HTML xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=GB2312" />

<meta content="text/html; charset=GB2312" http-equiv="Content-Type">

    <title></title>
	
	<link rel="stylesheet" href="javascripts/dist/css/bootstrap.min.css">
	<link rel="stylesheet" href="javascripts/dist/css/bootstrap.theme.min.css">

    
    <script type="text/javascript" src="javascripts/jquery-1.10.2.js"></script>
    
    <script type="text/javascript" src="javascripts/js/bootstrap.min.js"></script>
    
    <style>
        .author{
			color:#999
		}
        .author span{
			color:#000
		}
		.header{
			height: 35px;
			color: #fff;
			width: 700px;
			background: #4c525a;
			opacity: 0.9;
			font-size:18px;
			margin-top:5px;
			margin-bottom:5px;
		}
		.header span{
			line-height: 35px;
			margin-left: 20px;
		}
		body{
			background: url(/resource/themes/images/texture.png) repeat left top;
		}
    </style>
</head>


<body style="width:100%;height:100%;">
	<div class="container">
		<img width="150" src="resource/themes/images/movie/logo.png" />
		
		<form role="form" action="/search" method="get">
			<div class="input-group col-md-6" style="float:none">
				<input type="text" name="searchword"class="form-control" >
				<div class="input-group-btn">
					<button type="submit" class="btn btn-default">搜索</button>
				</div>
			</div>
		</form>
	<% list.forEach(function(movie){ %>
	<div class="post" style="margin-left:15px;margin-top:10px">
			
			

			<div class="header" >
				<!--<button id= "<%=movie._id%>" class="add btn btn-primary" style="margin:0">挂载</button> -->
				<span><%=movie.title%> </span>
			</div>

			<div class="" style="width: 190px;height:210px;float:left">
				<a href="info/">
					<img  class="main_pic" alt="main pic" src="/poster/<%=movie.poster%>" style="width:145px"/>
				</a>
			</div>
			<div class="" style="width: 600px;">
							
				<div class="author">
					导演： <span><%=movie.directors%></span>
				</div>
				<div class="author">
					演员： <span><%=movie.casts%></span>
				</div>
				<div class="author">
					日期：<span><%=movie.pubdates%></span>
				</div>
				<div class="author">
		            类型：<span><%=movie.genres%></span>
		        </div>
		        <div class="author">
		            地区： <span><%=movie.countries%></span>
		        </div>
				<div class="author">
					简介：
					
				</div>　
				<div class="author">
					<span><%=movie.summary?movie.summary.substring(0, 150): ''%>	</span>	
				</div>　
				<br>
							
			</div>
	</div>
	<div style="clear:left"></div>
	<% }); %>
	
	</div>
<script>
	
	$('.add').click(function(){
		window.parent.mount(this.id )
	});

</script>
</body>
</html>
